<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createProfile.CreateProfileTeacher">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Create"
        android:text="@string/create_your_profile"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="20dp"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/teacherPhoto"
        android:src="@drawable/ic_baseline_person_pin_24"
        android:layout_below="@+id/Create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacherName"
        android:hint="Name"
        android:layout_below="@+id/teacherPhoto"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_round_button"
        android:paddingStart="20dp"
        android:padding="10dp"
        android:textColorHint="#A1A1A1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacherDepartment"
        android:hint="Department"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/teacherName"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_round_button"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColorHint="#A1A1A1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacherQualifications"
        android:hint="Qualifications"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/teacherDepartment"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_round_button"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColorHint="#A1A1A1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/proceedButton"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:layout_below="@+id/teacherQualifications"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:textSize="21sp"
        android:background="@drawable/bg_round_button"/>

</RelativeLayout>