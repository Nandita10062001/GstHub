<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount"
    android:background="#121720">
    <TextView
        android:id="@+id/GstHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="@string/gsthub"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/SignInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/GstHub"
        android:layout_margin="20dp"
        android:text="Sign up"
        android:textColor="#88FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/createEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/SignInTitle"
        android:background="@drawable/bg_text_button"
        android:hint="Email"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="#3F51B5"
        android:textColorHint="#A1A1A1" />

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/createEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_text_button"
        android:hint="Password"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="#3F51B5"
        android:textColorHint="#A1A1A1" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_text_button"
        android:backgroundTint="#E43F5A"
        android:fontFamily="sans-serif"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signupButton"
        android:text="@string/or"
        android:textColor="#9FFFFFFF"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/GoogleSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_text_button"
        android:text="Sign up using google"
        android:textAlignment="center"
        android:textColor="#A1A1A1" />

    <TextView
        android:id="@+id/alreadyacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/GoogleSignUp"
        android:layout_marginTop="80dp"
        android:text="Already have an account? Sign in!"
        android:textColor="#9FFFFFFF"
        android:clickable="true"/>

</RelativeLayout>