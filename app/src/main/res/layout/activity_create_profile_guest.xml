<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createProfile.CreateProfileGuest"
    android:background="#121720">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Create"
        android:text="@string/create_your_profile"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:textColor="@android:color/white"/>
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/guestPhoto"
        android:src="@drawable/ic_baseline_person_pin_24"
        android:layout_below="@+id/Create"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guestName"
        android:hint="Name"
        android:layout_below="@+id/guestPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/bg_text_button"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColorHint="#A1A1A1"
        android:textColor="@android:color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guestNumber"
        android:hint="Contact Number"
        android:layout_below="@+id/guestName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_text_button"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColorHint="#A1A1A1"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:background="@drawable/bg_text_button"
        android:text="Type of Guest"
        android:textColor="#A1A1A1"
        android:layout_below="@id/guestNumber"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

    <Spinner
        android:id="@+id/guestType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guestNumber"
        android:layout_toEndOf="@id/text1"
        android:background="@drawable/bg_text_button"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/proceedButton"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:textSize="21sp"
        android:background="@drawable/button_bg"/>



</RelativeLayout>